@model IEnumerable<BTL_HTTTQL.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfEmployees)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BraId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfEmployees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BraId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Dpmid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Dpmid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Dpmid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
